<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical"
    tools:context=".DashboardActivity">

    <!-- Speed Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <TextView
            android:id="@+id/txtCurrentSpeed"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="0"
            android:textColor="@color/textColor"
            android:textSize="50sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:layout_gravity="center_horizontal"/>

        <!--style="@style/spinner_style"-->
        <Spinner
            android:id="@+id/To_Units"
            android:entries="@array/measurement_array"
            android:prompt="@string/spinner_Default"
            android:layout_height="46dp"
            android:layout_width="186dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


    <!--Linear laylout for the second Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:alpha="1"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_gravity="right|center_vertical">

        <!--Layout for the Longitude  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:alpha="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Long_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Longitude: "
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/long_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Long_Title"
                    android:textColor="@color/textColor" />
            </RelativeLayout>

        </LinearLayout>
        <!--Sub-Layout for the Lattitude  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Lat_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latitude: "
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/lat_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Lat_Title"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/lat_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Lat_Title"
                    android:textColor="@color/textColor" />
            </RelativeLayout>

    </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        >

            <!-- Compass Text-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/heading_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bearing: "
                    android:textColor="@color/textColor"/>

                <TextView
                    android:id="@+id/tvHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"/>
            </LinearLayout>

            <!-- Compass Image-->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" >

                <ImageView
                    android:id="@+id/imgCompass_background"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/compass_rose" />

                <ImageView
                    android:id="@+id/imgCompass"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/compass_needle" />
            </FrameLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtCurrentWind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:text="Wind speed: "
                    />

            </LinearLayout>
        </LinearLayout>
</LinearLayout>
</ScrollView>